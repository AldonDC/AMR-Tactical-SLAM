Panels:
  - Class: rviz_common/Displays
    Help Height: 0
    Name: Displays
    Property Tree Widget:
      Expanded:
        - /Global Options1
        - /Vehicle1
        - /SLAM Pipeline1
        - /Map1
      Splitter Ratio: 0.4
    Tree Height: 600
  - Class: rviz_common/Views
    Expanded:
      - /Current View1
    Name: Views
    Splitter Ratio: 0.5

Visualization Manager:
  Class: ""
  Displays:
    # =========================================================================
    # BACKGROUND & GRID (Dark Theme - Waymo Style)
    # =========================================================================
    - Alpha: 0.3
      Cell Size: 10
      Class: rviz_default_plugins/Grid
      Color: 40; 45; 55
      Enabled: true
      Line Style:
        Line Width: 0.02
        Value: Lines
      Name: Ground Grid
      Normal Cell Count: 0
      Offset:
        X: 0
        Y: 0
        Z: -0.1
      Plane: XY
      Plane Cell Count: 50
      Reference Frame: map
      Value: true

    # =========================================================================
    # VEHICLE VISUALIZATION
    # =========================================================================
    - Class: rviz_default_plugins/Group
      Displays:
        - Class: rviz_default_plugins/RobotModel
          Alpha: 1
          Description File: ""
          Description Source: Topic
          Description Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /robot_description
          Enabled: true
          Links:
            All Links Enabled: true
            Expand Joint Details: false
            Expand Link Details: false
            Expand Tree: false
          Mass Properties:
            Inertia: false
            Mass: false
          Name: Vehicle Model
          TF Prefix: ""
          Update Interval: 0
          Value: true
          Visual Enabled: true

        - Class: rviz_default_plugins/TF
          Enabled: true
          Frame Timeout: 15
          Frames:
            All Enabled: false
            base_link:
              Value: true
            map:
              Value: true
            odom:
              Value: true
            velodyne:
              Value: true
          Marker Scale: 1.5
          Name: TF Frames
          Show Axes: true
          Show Names: true
          Tree:
            map:
              odom:
                base_link:
                  velodyne: {}
          Update Interval: 0
          Value: true

      Enabled: true
      Name: Vehicle

    # =========================================================================
    # SLAM PIPELINE VISUALIZATION
    # =========================================================================
    - Class: rviz_default_plugins/Group
      Displays:
        # Current LiDAR Scan (Cyan/Electric Blue - Waymo style)
        - Alpha: 1
          Autocompute Intensity Bounds: true
          Autocompute Value Bounds:
            Max Value: 5
            Min Value: -1
            Value: true
          Axis: Z
          Channel Name: intensity
          Class: rviz_default_plugins/PointCloud2
          Color: 0; 255; 255
          Color Transformer: FlatColor
          Decay Time: 0.1
          Enabled: true
          Invert Rainbow: false
          Max Color: 255; 255; 255
          Max Intensity: 4096
          Min Color: 0; 0; 0
          Min Intensity: 0
          Name: Current Scan
          Position Transformer: XYZ
          Queue Size: 2
          Selectable: false
          Size (Pixels): 4
          Size (m): 0.08
          Style: Points
          Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Best Effort
            Value: /lidar/filtered
          Use Fixed Frame: true
          Use rainbow: false
          Value: true

        # Trajectory Path (Orange/Gold gradient - Premium look)
        - Alpha: 1
          Buffer Length: 1
          Class: rviz_default_plugins/Path
          Color: 255; 165; 0
          Enabled: true
          Head Diameter: 0.5
          Head Length: 0.3
          Length: 0.3
          Line Style: Billboards
          Line Width: 0.25
          Name: Vehicle Path
          Offset:
            X: 0
            Y: 0
            Z: 0.1
          Pose Color: 255; 85; 255
          Pose Style: None
          Queue Size: 10
          Radius: 0.1
          Shaft Diameter: 0.15
          Shaft Length: 0.15
          Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /slam/path
          Value: true

        # Fused Odometry Arrow (Shows heading)
        - Angle Tolerance: 0.1
          Class: rviz_default_plugins/Odometry
          Covariance:
            Orientation:
              Alpha: 0.3
              Color: 255; 255; 127
              Color Style: Unique
              Frame: Local
              Offset: 1
              Scale: 0.5
              Value: true
            Position:
              Alpha: 0.2
              Color: 0; 255; 200
              Scale: 0.3
              Value: true
            Value: true
          Enabled: true
          Keep: 1
          Name: Robot Pose
          Position Tolerance: 0.1
          Queue Size: 10
          Shape:
            Alpha: 1
            Axes Length: 1
            Axes Radius: 0.1
            Color: 0; 255; 200
            Head Length: 0.4
            Head Radius: 0.25
            Shaft Length: 0.8
            Shaft Radius: 0.12
            Value: Arrow
          Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /odom
          Value: true

        # RTK Position Trail (Green dots - Ground truth reference)
        - Angle Tolerance: 0.1
          Class: rviz_default_plugins/Odometry
          Covariance:
            Orientation:
              Alpha: 0
              Color: 255; 255; 127
              Color Style: Unique
              Frame: Local
              Offset: 1
              Scale: 1
              Value: false
            Position:
              Alpha: 0.5
              Color: 0; 255; 100
              Scale: 0.15
              Value: true
            Value: true
          Enabled: true
          Keep: 200
          Name: RTK Trail
          Position Tolerance: 0.05
          Queue Size: 10
          Shape:
            Alpha: 0.8
            Axes Length: 0.3
            Axes Radius: 0.05
            Color: 0; 255; 100
            Head Length: 0.1
            Head Radius: 0.08
            Shaft Length: 0.15
            Shaft Radius: 0.04
            Value: Arrow
          Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /rtk/odom_enu
          Value: true

      Enabled: true
      Name: SLAM Pipeline

    # =========================================================================
    # MAP VISUALIZATION (Height-colored point cloud - Premium gradient)
    # =========================================================================
    - Class: rviz_default_plugins/Group
      Displays:
        # Global Map (Height-based Rainbow coloring)
        - Alpha: 0.9
          Autocompute Intensity Bounds: true
          Autocompute Value Bounds:
            Max Value: 8
            Min Value: 0
            Value: true
          Axis: Z
          Channel Name: z
          Class: rviz_default_plugins/PointCloud2
          Color: 255; 255; 255
          Color Transformer: AxisColor
          Decay Time: 0
          Enabled: true
          Invert Rainbow: false
          Max Color: 255; 0; 255
          Max Intensity: 4096
          Min Color: 0; 255; 255
          Min Intensity: 0
          Name: 3D Map
          Position Transformer: XYZ
          Queue Size: 1
          Selectable: true
          Size (Pixels): 2
          Size (m): 0.15
          Style: Points
          Topic:
            Depth: 1
            Durability Policy: Transient Local
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /map
          Use Fixed Frame: true
          Use rainbow: true
          Value: true

        # New Keyframes (Bright pink/magenta for emphasis)
        - Alpha: 1
          Autocompute Intensity Bounds: true
          Autocompute Value Bounds:
            Max Value: 10
            Min Value: -1
            Value: true
          Axis: Z
          Channel Name: intensity
          Class: rviz_default_plugins/PointCloud2
          Color: 255; 50; 200
          Color Transformer: FlatColor
          Decay Time: 3
          Enabled: true
          Invert Rainbow: false
          Max Color: 255; 255; 255
          Max Intensity: 4096
          Min Color: 0; 0; 0
          Min Intensity: 0
          Name: New Keyframes
          Position Transformer: XYZ
          Queue Size: 10
          Selectable: false
          Size (Pixels): 5
          Size (m): 0.1
          Style: Points
          Topic:
            Depth: 5
            Durability Policy: Volatile
            History Policy: Keep Last
            Reliability Policy: Reliable
            Value: /map/keyframes
          Use Fixed Frame: true
          Use rainbow: false
          Value: true

      Enabled: true
      Name: Map

    # =========================================================================
    # LOOP CLOSURE VISUALIZATION
    # =========================================================================
    - Class: rviz_default_plugins/MarkerArray
      Enabled: true
      Name: Loop Closures
      Namespaces: {}
      Topic:
        Depth: 5
        Durability Policy: Volatile
        History Policy: Keep Last
        Reliability Policy: Reliable
        Value: /loop_closure/markers
      Value: true

  Enabled: true
  Global Options:
    Background Color: 15; 17; 22
    Fixed Frame: map
    Frame Rate: 60
  Name: root
  Tools:
    - Class: rviz_default_plugins/MoveCamera
    - Class: rviz_default_plugins/Select
    - Class: rviz_default_plugins/FocusCamera
    - Class: rviz_default_plugins/Measure
      Line color: 0; 255; 255

  Transformation:
    Current:
      Class: rviz_default_plugins/TF
  Value: true
  Views:
    Current:
      Class: rviz_default_plugins/ThirdPersonFollower
      Distance: 25
      Enable Stereo Rendering:
        Stereo Eye Separation: 0.06
        Stereo Focal Distance: 1
        Swap Stereo Eyes: false
        Value: false
      Focal Point:
        X: 0
        Y: 0
        Z: 0
      Focal Shape Fixed Size: false
      Focal Shape Size: 0.05
      Invert Z Axis: false
      Name: Current View
      Near Clip Distance: 0.01
      Pitch: 0.6
      Target Frame: base_link
      Value: ThirdPersonFollower (rviz_default_plugins)
      Yaw: 3.14
    Saved:
      - Class: rviz_default_plugins/Orbit
        Distance: 100
        Enable Stereo Rendering:
          Stereo Eye Separation: 0.06
          Stereo Focal Distance: 1
          Swap Stereo Eyes: false
          Value: false
        Focal Point:
          X: 0
          Y: 0
          Z: 0
        Focal Shape Fixed Size: true
        Focal Shape Size: 0.05
        Invert Z Axis: false
        Name: Bird's Eye
        Near Clip Distance: 0.01
        Pitch: 1.5
        Target Frame: map
        Value: Orbit (rviz)
        Yaw: 0
      - Class: rviz_default_plugins/ThirdPersonFollower
        Distance: 15
        Enable Stereo Rendering:
          Stereo Eye Separation: 0.06
          Stereo Focal Distance: 1
          Swap Stereo Eyes: false
          Value: false
        Focal Point:
          X: 0
          Y: 0
          Z: 0
        Focal Shape Fixed Size: false
        Focal Shape Size: 0.05
        Invert Z Axis: false
        Name: Follow Vehicle
        Near Clip Distance: 0.01
        Pitch: 0.4
        Target Frame: base_link
        Value: ThirdPersonFollower (rviz_default_plugins)
        Yaw: 3.14

